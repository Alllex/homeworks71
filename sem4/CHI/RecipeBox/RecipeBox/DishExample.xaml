                           Margin="5"
                           DockPanel.Dock="Left"/>
                    <Viewbox DockPanel.Dock="Right"
                             Margin="0,0,5,0"
                             Height="25">
                        <Image Source="Icons/heart.png"/>
                    </Viewbox>
                </DockPanel>
                <Viewbox HorizontalAlignment="Left" Width="386">
