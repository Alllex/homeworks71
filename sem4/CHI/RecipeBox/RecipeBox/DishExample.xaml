                <TextBlock  Text="Ингредиенты:"
                        FontFamily="Georgia"
                        Foreground="Maroon"
                        FontSize="20"
                        FontWeight="Bold"
                        Margin="5"/>
                <ListBox 
                        FontFamily="Georgia"
                        Foreground="Maroon"
                        FontSize="20"
                        ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                        ScrollViewer.VerticalScrollBarVisibility="Auto">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem" BasedOn="{StaticResource {x:Type ListBoxItem}}">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                    </Style>
                </ListBox.ItemContainerStyle>
                    <ListBoxItem>
                        <Grid>
                            <TextBlock Text="Картофель" Margin="3"
                               HorizontalAlignment="Left"/>
                        <TextBlock Text="7 шт"  Margin="3"
                               HorizontalAlignment="Right"/>
                        </Grid>
                    </ListBoxItem>
                <ListBoxItem>
                    <Grid>
                        <TextBlock Text="Морковь" Margin="3"
                               HorizontalAlignment="Left"/>
                        <TextBlock Text="5 шт"  Margin="3"
                               HorizontalAlignment="Right"/>
                    </Grid>
                </ListBoxItem>
                <ListBoxItem>
                    <Grid>
                        <TextBlock Text="Огурцы маринованные" Margin="3"
                               HorizontalAlignment="Left"/>
                        <TextBlock Text="6 шт"  Margin="3"
                               HorizontalAlignment="Right"/>
                    </Grid>
                </ListBoxItem>
                <ListBoxItem>
                    <Grid>
                        <TextBlock Text="Картофель" Margin="3"
                               HorizontalAlignment="Left"/>
                        <TextBlock Text="7 шт"  Margin="3"
                               HorizontalAlignment="Right"/>
                    </Grid>
                </ListBoxItem>
            </ListBox>
                <DockPanel LastChildFill="False">
                    <TextBlock Text="Инструкция:"
                           DockPanel.Dock="Left"
                           FontFamily="Georgia"
                           Foreground="Maroon"
                           FontSize="20"
                           FontWeight="Bold"
                           Margin="5"/>
                    <TextBlock Text="1 час"
                           DockPanel.Dock="Right"
                           FontFamily="Georgia"
                           Foreground="Maroon"
                           FontSize="20"
                           FontWeight="Bold"
                           Margin="5"/>
                </DockPanel>
            <ListBox 
                        FontFamily="Georgia"
                        Foreground="Maroon"
                        FontSize="20"
                        ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                        ScrollViewer.VerticalScrollBarVisibility="Auto">
                <ListBoxItem>
                    <TextBlock Text="1. Отварить картофель, морковь и яйца."
                                   TextWrapping="Wrap"
                                   />
                </ListBoxItem>
                <ListBoxItem>
                    <TextBlock Text="2. Все нарезать мелкими кубиками."
